{
  "author": "Saroj Regmi",
  "version": "1.0",
  "name": "Highliter",
  "manifest_version": 3,
  "description": "An great extension that lets you highlight the text, that you remember and helps you to organize and browse them effeciently",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "user_scripts": {
    "api_script": "scripts/apiScript.js"
  },
  "homepage_url": "www.google.com",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "js": ["scripts/contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/backgroundScript.js"]
  }
}
